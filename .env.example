# These are EXAMPLE keys for lab use only. Don't push your secret

# Application Environment
ENVIRONMENT=development
DEBUG=false  # Set to false for INFO-level logging

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_USER=py_arch_lab
POSTGRES_PASSWORD=py_arch_lab
POSTGRES_DB=ticketing_system_db
POSTGRES_PORT=5432

# Read Replica Configuration (Optional - for read-write separation)
# In development: Leave empty to use single database for both read/write
# In production: Set these to enable read-write separation
# POSTGRES_REPLICA_SERVER=localhost
# POSTGRES_REPLICA_PORT=5433

# Database Connection Pool Configuration
# Write pool is smaller since writes are less frequent than reads
DB_POOL_SIZE_WRITE=20          # Connection pool size for write operations
DB_POOL_SIZE_READ=100          # Connection pool size for read operations (larger for read-heavy workloads)
DB_POOL_MAX_OVERFLOW=50        # Max connections beyond pool_size
DB_POOL_TIMEOUT=30             # Seconds to wait for available connection
DB_POOL_RECYCLE=3600           # Recycle connections after this many seconds (prevents stale connections)
DB_POOL_PRE_PING=true          # Verify connection health before use (prevents errors from closed connections)

# Security Keys 
SECRET_KEY=lab-secret-key-never-use-in-production-change-immediately
RESET_PASSWORD_TOKEN_SECRET=lab-reset-token-never-use-in-production
VERIFICATION_TOKEN_SECRET=lab-verification-token-never-use-in-production

# Token Expiration 
ACCESS_TOKEN_EXPIRE_MINUTES=1440  
REFRESH_TOKEN_EXPIRE_DAYS=30 

# Algorithm
ALGORITHM=HS256  

# CORS Settings
BACKEND_CORS_ORIGINS='["http://localhost:8000", "http://0.0.0.0:8000"]'
ALLOWED_HOSTS=localhost,127.0.0.1

# Granian Server Logging
GRANIAN_LOG_ACCESS_FMT='%(addr)s - "%(method)s %(path)s %(protocol)s" - %(status)d - %(dt_ms).3fms'

# Kvrocks Configuration
KVROCKS_HOST=localhost
KVROCKS_PORT=6666
KVROCKS_DB=0
KVROCKS_PASSWORD=

# Kvrocks Connection Pool Configuration
KVROCKS_POOL_MAX_CONNECTIONS=50  # Max connections in pool
KVROCKS_POOL_SOCKET_TIMEOUT=5  # Socket read/write timeout (seconds)
KVROCKS_POOL_SOCKET_CONNECT_TIMEOUT=5  # Connection timeout (seconds)
KVROCKS_POOL_SOCKET_KEEPALIVE=true  # Enable TCP keepalive
KVROCKS_POOL_HEALTH_CHECK_INTERVAL=30  # Health check interval (seconds)

# Monitoring Configuration
GF_SECURITY_ADMIN_PASSWORD=P@ssw0rd
